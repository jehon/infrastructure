#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source-path=SCRIPTDIR/
. "$(dirname "$(realpath "${BASH_SOURCE[0]}")")/lib.sh"

SUB_URL="$1"

# curl --request GET "https://gitlab.example.com/api/v4/projects"

#
# https://docs.gitlab.com/ee/api/projects.html#list-all-projects
# https://docs.gitlab.com/ee/api/members.html#roles 40 = Maintainer
#
# shellcheck source-path=SCRIPTDIR/../
"${JH_PKG_FOLDER}"/bin/jh-gitlab "/projects?membership=true&min_access_level=40" | jq -r "((.[].web_url) + \"${SUB_URL}\")" | xargs open
