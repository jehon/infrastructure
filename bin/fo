#!/usr/bin/env bash

set -o errexit

# shellcheck source-path=SCRIPTDIR/
. "$(dirname "$(realpath "${BASH_SOURCE[0]}")")/lib.sh"

if [ ! -d "${PRJ_ROOT}/node_modules" ]; then
    (
        echo "** Need to get dependencies"
        cd "$PRJ_ROOT"
        make node-dependencies
    ) >&2
fi

exec node --import tsx/esm --harmony-temporal "${PRJ_ROOT}/src/file-organizer/src/fo.ts" "$@"
