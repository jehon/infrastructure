#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source-path=SCRIPTDIR/
. "$(dirname "$(realpath "${BASH_SOURCE[0]}")")/lib.sh"

I=1
while true; do
    (
        echo "************** Run $I **************************"
        "$@" >/dev/null 2 >&1
    ) | jh-tag-stdin "$I"
    ((I++))
done
