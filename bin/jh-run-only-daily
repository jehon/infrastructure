#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

# shellcheck source-path=SCRIPTDIR/
. "$(dirname "$(realpath "${BASH_SOURCE[0]}")")/lib.sh"

historyFile="${stateFilesRadix}.history"

if [ -n "$FORCE" ]; then
    true
elif [ "$(find "${historyFile}" -mtime -1 -print)" == "" ]; then
    # Modified days ago
    true
elif [ "$(date %H)" == "23" ]; then
    true
else
    echo "No need to run it"
    exit 0
fi

markAsSuccess() {
    echo "Marking job as done in ${historyFile}"
    touch "${historyFile}"
}

# Create/update the history marker only on success
jh_on_exit_success "markAsSuccess"

echo "Running..."
