#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source=/dev/null
. jh-lib

host="$JH_DEPLOY_STACK_HOST"
if [ -z "$host" ]; then
    host="${1:?Need target host as [1]}"
    shift
fi
# $@ are now servicess

stackRoot=/srv/stack

header_begin "Syncing files"
rsync -e "ssh -l jehon-daemon" \
    -ri --times --perms \
    --exclude .git \
    --exclude volumes \
    --exclude secrets \
    --exclude .env \
    --delete \
    . "$host:$stackRoot/"
header_end

header_begin "On remote"
# shellcheck disable=SC2029
ssh "$host" /usr/bin/jh-docker-compose-update "$@" | jh-tag-stdin "remote"
header_end

ok
