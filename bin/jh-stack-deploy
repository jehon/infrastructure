#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source=/dev/null
. jh-lib

host="$JH_DEPLOY_STACK_HOST"
if [ -z "$host" ]; then
    host="${1:?Need target host as [1]}"
    shift
fi
# $@ are now servicess

stackRoot=/srv/stack

header_begin "Syncing files"
rsync -e "ssh -l jehon-daemon" \
    -ri --times --perms \
    --exclude .git \
    --exclude volumes \
    --exclude secrets \
    --exclude .env \
    --delete \
    . "$host:$stackRoot/"
header_end

header_begin "On remote"
(
    cat <<EOS
    cd "$stackRoot"

    echo "* Pulling images"
    if [ -z "$1" ]; then
        echo "* No service specified, pulling images"
        docker compose pull
    fi

    # !! Expansion is done here, run is done on remote

    if [ "$1" != "sync" ]; then
        for service in $@; do
            echo "* Removing \$service"
            docker compose down "\$service"
        done
    fi

    echo "* Starting the stack"
    docker compose up \
        --remove-orphans \
        --detach --wait

    if [ "$1" != "sync" ] && [ -n "$1" ]; then
        echo "* Logs $@"
        # !! Expansion is done here, run is done on remote
        docker compose logs -f $@
    fi
EOS
) | ssh "$host" bash - | jh-tag-stdin "remote"
header_end

ok
