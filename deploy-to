#!/usr/bin/env bash

SWD="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

# shellcheck source-path=SCRIPTDIR/
. "${SWD}/bin/lib.sh"

# Initial setup from dhcp ip:
#
# -e "ansible_host=192.168.1.5"
#

PLAYBOOK="${PLAYBOOK:-"setup.yml"}"

if [ -z "$1" ]; then
    echo "You need to setup a host"
    echo "For initial setup, use 'init'"

    jh_fatal "Need [host...]"
fi

if [ "$1" == "init" ]; then
    if [ "$(id -u)" != "0" ]; then
        jh_fatal "You need to use sudo to run 'init' target"
    fi
fi

if [ ! -r ~/restricted/ansible-encryption-key ]; then
    mkdir -p ~/restricted
    touch ~/restricted/ansible-encryption-key
    jh_fatal "Key is not defined at ~/restricted/ansible-encryption-key"
fi

make dependencies

export PYTHONPATH="${JH_PKG_FOLDER}/tmp/python/common:$PYTHONPATH"
cd infrastructure || exit

ARGS=()

case "$HOST" in
    "" | "dev" )
        ARGS+=( "--ask-become-pass" )
esac

if [ -n "$1" ]; then
    HOST="$1"
    shift
    ansible-playbook --limit "${HOST}" "$@" "${PLAYBOOK}" \
        "${ARGS[@]}" |
        "${JH_PKG_FOLDER}"/packages/jehon/usr/bin/jh-tag-stdin "${HOST}"
else
    ansible-playbook "${PLAYBOOK}"
fi
