#!/usr/bin/sh

set -o errexit

# shellcheck source-path=SCRIPTDIR/../jehon/usr/sbin/
. /usr/sbin/jh-deb-helpers.sh

export PATH="$PATH:/snap/bin"

case "$1" in
configure)
    if jh-is-full-machine; then
        echo "* Installing jehon-eternal"
        /usr/sbin/jehon-eternal install
    fi
    ;;
remove)
    if jh-is-full-machine; then
        echo "* Uninstalling jehon-eternal"
        /usr/sbin/jehon-eternal uninstall
    fi
    ;;
esac

#
# Legacy
#

exit 0
