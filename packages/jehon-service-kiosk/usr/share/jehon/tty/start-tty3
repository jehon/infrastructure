#!/usr/bin/bash

set -o errexit
set -o pipefail

LOG="$HOME/log"

exec &> >( tee "$LOG" )

if [ "$( id -u )" == "0" ]; then
    echo "Switching to user jehon-tty"
    # User need access to /dev/fb0
    su jehon-tty "$0"
fi

# TODO: refactor into direct service

/usr/bin/cvlc --no-audio --loop /var/cache/jehon/fire

echo "TTY Fire Script has exited..."
exit 1
