#!/usr/bin/env bash

# !! Must run as end-user

set -o errexit
set -o pipefail
shopt -s nullglob

_SD="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

# shellcheck source-path=SCRIPTDIR/../../../jehon/usr/bin/
. jh-lib

CONTEXT="$1"
config="${HOME}/koalty/scripts/cron"

# For info in scripts
export CONTEXT

LOCATION="${LOCATION:''}"
if [ -z "${LOCATION}" ]; then
	LOCATION="$(jh-location-detect)"
fi
export LOCATION

if [ -d "${config}" ]; then
	# Logs are in the journalctl
	jh-runner "${config}"
else
	# Acceptable
	jh_error "Context config not found: ${config}"
fi
