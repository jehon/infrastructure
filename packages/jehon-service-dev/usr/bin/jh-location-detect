#!/usr/bin/env bash

set -o errexit

# shellcheck source-path=SCRIPTDIR/../../../jehon/usr/bin
. jh-lib

in_location() {
    echo "$1"
    exit 0
}

if ! ping -c 1 8.8.8.8 >&/dev/null; then
    in_location "disconnected"
fi

WIFI="$(iwgetid -r || true)"
jh_debug "Detected WIFI: $WIFI"

case "${WIFI}" in
"")
    # No wifi
    ;;
"Heyfjveidofbridkegxto")
    in_location "mobile"
    ;;
"Digiteal")
    in_location "work"
    ;;
"Digiteal-dev")
    in_location "work"
    ;;
"chez_honlet")
    in_location "home"
    ;;
*)
    in_location "public"
    ;;
esac

IPS="$(hostname -I)"
jh_debug "Detected IP: $IPS"
for IP in $IPS; do
    jh_debug "IP: $IP"
    case "${IP}" in
    "")
        in_location "disconnected"
        ;;
    192\.168\.1\.*)
        in_location "home"
        ;;
    esac
done

# Fallback
jh_debug "** Fallback"
in_location "public"
