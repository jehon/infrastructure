#!/usr/bin/env bash

# shellcheck source=/dev/null
. jh-lib

_SD="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

if jh-fs "is-empty" "/var/backups/live"; then
	echo "No live data, exiting.."
	exit 0
fi

"$_SD/jehon-backup-take-snapshot.sh" daily

# Remove too old backups
# Monthly backups are taken, so 40 days is ok
find "/var/backups/daily" -mtime +40 -delete
