#!/usr/bin/env bash

set -o errexit

# shellcheck source-path=SCRIPTDIR/
. jh-lib

in_location() {
    echo "$1"
    exit 0
}

WIFI="$( iwgetid -r || true )"
jh_debug "Detected WIFI: $WIFI"

case "${WIFI}" in
    "" )
        # No wifi
        ;;
    "chez_honlet" )
        in_location "home"
        ;;
    * )
        in_location "external"
        ;;
esac

IP="$( hostname -I )"
jh_debug "Detected IP: $IP"
case "${IP}" in
    192\.168\.1\.* )
        in_location "home"
        ;;
esac

# Fallback
jh_debug "** Fallback"
in_location "external"
