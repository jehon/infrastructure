#!/usr/bin/env bash

set -o errexit
set -o pipefail

# shellcheck source-path=SCRIPTDIR
. jh-lib

res=0
cmd="$1"
for F in *; do
    if [ -r "$F/.git" ]; then
        (
            cd "$F"
            if [ -n "$cmd" ]; then
                echo "$cmd..."
                git "$cmd"
            else
                echo "Analyzing..."
                jh-git-status | grep "âœ—" || true
            fi
            ok
        ) |& jh-tag-stdin "$F" || res=1
    fi
done

exit $res
