#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

# shellcheck source-path=SCRIPTDIR
. jh-lib

all_locations="$*"
: "${1:?Need the location as [1]}"

detected="$(jh-location-detect)"

while [ -n "$1" ]; do
    if [ "$detected" == "${1}" ]; then
        exit 0
    fi
    shift
done

if [ -n "$FORCE" ]; then
    echo "* Forcing execution on network $detected"
fi

jh_fatal "Not at the required location: $detected (${all_locations})"
