#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

# shellcheck source-path=SCRIPTDIR/
. jh-lib

FOLDER="${1:-.}"

echo "Starting tests in ${FOLDER}"

for F in "${FOLDER}"/*-test.sh ; do
    BN="$( jh-fs "name" "${F}" )"

    if [[ "$F" =~ .*-lib\..* ]]; then
        jh_info "Skipping lib file $F"
        continue
    fi

    if [ ! -f "$F" ]; then
        jh_info "Skipping non-file $F"
        continue
    fi

    (
        header_begin "Starting $BN"
        bash -c "'$F'" || (
            ko "Test failed"
            false
        )
        header_end
    ) | jh-tag-stdin

done

ok "All test passed with success"
