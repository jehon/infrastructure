#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

# shellcheck source-path=SCRIPTDIR
. jh-lib

jh_info "TS: ${jhTS}"

if [ "$1" == "add" ]; then
	header_begin "Adding files"
	git add .
	header_end
	shift
fi

header_begin "Pull"
git pull
header_end

header_begin "Commit"
git commit -m "$1 (${jhTS})"
header_end

header_begin "Push"
git push
header_end

jh_info "TS: ${jhTS}"
