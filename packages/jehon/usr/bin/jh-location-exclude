#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

# shellcheck source-path=SCRIPTDIR
. jh-lib

: "${1:?Need the location as [1]}"

detected="$(jh-location-detect)"

if [ -n "$FORCE" ]; then
	echo "* Forcing execution on network $detected"
fi

while [ -n "$1" ]; do
	if [ "$detected" == "${1}" ]; then
		jh_fatal "At excluded location (${1})"
	fi
	shift
done

exit 0
