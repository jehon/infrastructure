#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

# shellcheck source-path=SCRIPTDIR
. jh-lib

if [ "$1" == "add" ]; then
	header_begin "Adding files"
	git add .
	header_end
fi

header_begin "Commit"
git commit --amend --no-edit
header_end

header_begin "Push"
git push -f
header_end

header_begin "New status"
git status
header_end
