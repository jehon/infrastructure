#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

_SD="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

# shellcheck source-path=SCRIPTDIR
. jh-lib

scriptFolder=/usr/share/jehon/node
if [ -n "${JH_PKG_FOLDER}" ]; then
    scriptFolder="${JH_PKG_FOLDER}"/tmp/node/built
fi
script=${scriptFolder}/jh-fo.cjs

TZ="$(timedatectl show --value --property=Timezone)"
export TZ

node --harmony-temporal "${script}" "$@"
